<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#EFEFEF">
	
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#EFEFEF" >

    <ImageView 
        android:id="@+id/home_imagem"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/book_icon"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>
    
    <ImageView 
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@drawable/dotted"
        android:layerType="software"/>
    
    <EditText
        android:id="@+id/home_txtBusca"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:hint="@string/buscar_livro"
        android:padding="5dip"
        android:singleLine="true"
        android:background="@drawable/edit_custom"
        android:textColor="#555555"
        android:textSize="25sp"
        android:layout_gravity="center"                  
        android:layout_marginTop="20dp"        
        android:drawableLeft="@android:drawable/ic_menu_search" /> 
    
        <RelativeLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:id="@+id/relativeLayout">
       
            <Button 
		        android:id="@+id/home_btnBuscar"
		        android:layout_width="100dp"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        android:textColor="#000000"
		        android:layout_marginTop="10dp"
		        android:layout_centerHorizontal="true"
		        android:text="@string/buscar"
		        />
            
             <TextView 
		        android:id="@+id/home_lblIntro"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:layout_marginTop="30dp"
		        android:layout_marginLeft="65dp"
		        android:layout_below="@id/home_btnBuscar"
		        android:text="@string/ja_registrou" />
		    
     	    <TextView 
		        android:id="@+id/home_lblLogin"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:layout_marginTop="25dp"
		        android:layout_below="@id/home_lblIntro"
		        android:layout_marginLeft="30dp"
		        android:textColor="#666666" 
		        android:text="@string/logue_para_comprar" />
     	    
     	    <Button 
		        android:id="@+id/home_btnCadastrar"
		        android:layout_width="100dp"
		        android:layout_height="wrap_content"
		        android:layout_gravity="right"
		        android:textColor="#000000"
		        android:layout_marginTop="15dp"
		        android:layout_marginRight="10dp"
		        android:layout_alignParentRight="true"
		        android:layout_below="@id/home_btnBuscar"
		        android:text="@string/cadastrar"
		        />
		    
    		<Button 
		        android:id="@+id/home_btnLogar"
		        android:layout_width="100dp"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="10dp"
		        android:layout_alignParentRight="true"
		        android:textColor="#000000"
		        android:layout_below="@id/home_btnCadastrar"
		        android:text="@string/logar"
		        />
     	    
            
        </RelativeLayout> 	    
     	   
</LinearLayout>
</ScrollView>