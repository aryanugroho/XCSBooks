<?xml version="1.0" encoding="utf-8"?>
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/relativeLayout">
	
		<TextView
		    android:id="@+id/frag_lblIntro"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignBaseline="@+id/frag_btnCadastrar"
		    android:layout_alignBottom="@+id/frag_btnCadastrar"
		    android:layout_alignLeft="@+id/frag_lblLogin"
		    android:text="@string/ja_registrou"
		    android:textSize="20sp" />
	
		<TextView
		    android:id="@+id/frag_lblLogin"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignTop="@+id/frag_btnLogar"
		    android:layout_centerHorizontal="true"
		    android:text="@string/logue_para_comprar"
		    android:textColor="#666666"
		    android:textSize="20sp" />
	
		<Button
		    android:id="@+id/frag_btnCadastrar"
		    android:layout_width="100dp"
		    android:layout_height="wrap_content"
		    android:layout_alignLeft="@+id/frag_btnLogar"
		    android:layout_alignParentTop="true"
		    android:layout_marginTop="15dp"
		    android:text="@string/cadastrar"
		    android:textColor="#000000" />
	
		<Button
		    android:id="@+id/frag_btnLogar"
		    android:layout_width="100dp"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_below="@+id/frag_btnCadastrar"
		    android:layout_marginRight="15dp"
		    android:layout_marginTop="18dp"
		    android:text="@string/logar"
		    android:textColor="#000000" />
	
	</RelativeLayout>
