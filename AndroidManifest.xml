<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.xcsbooks"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.xcsbooks.HomeActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.xcsbooks.BuscarActivity"
            android:label="@string/title_activity_buscar"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.xcsbooks.LogarActivity"
            android:label="@string/title_activity_logar"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.xcsbooks.CarrinhoActivity"
            android:label="@string/title_activity_carrinho"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.xcsbooks.DetalhesLivroActivity"
            android:label="@string/title_activity_detalhes_livro"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.xcsbooks.CadastrarActivity"
            android:label="@string/title_activity_cadastrar"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name="com.example.xcsbooks.BaseActivity"
            android:label="@string/title_activity_base" >
        </activity>
    </application>

</manifest>
